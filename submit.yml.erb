---
batch_connect:
  template: "basic"
  conn_params:
    - jupyter_api
script:
  # Walltime set automatically by bc_num_hours
  # Account set automatically by bc_account
  queue_name: <%= custom_queue %>
  native:
    - "-l"
    - "select=<%= num_nodes %>:ncpus=<%= bc_num_slots %>:mpiprocs=<%= mpiprocs %>:ompthreads=<%= threads %>:mem=<%= memory %>GB<% if num_gpus.to_i > 0 %>:ngpus=<%= num_gpus %>:gpu_type=<%= gpu_type %><% end %>"
