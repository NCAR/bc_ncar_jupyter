<%-
  ppn   = num_cores.to_i
  props = node_type == "gpu" ? ":ppn=#{ppn}:gpus=1" : ":ppn=#{ppn}"
-%>
---
batch_connect:
  template: "basic"
  conn_params:
    - jupyter_api
script:
  <%- if node_type == "debug" -%>
  queue_name: "debug"
  <%- end -%>
  native:
    resources:
      nodes: "1<%= props %>"
